<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td>
          <video width="320" height="240" controls>
            <source src="<%= test.image %>" type="video/mp4">
            <source src="<%= test.image %>" type="video/ogg">
            <source src="<%= test.image %>" type="video/webm">
            <object data="<%= test.image %>" width="320" height="240">
            <embed src="<%= test.image %>" width="320" height="240">
            </object> 
          </video>
        </td>
        <!--<td><img src="<%#= test.image %>" height="250" width="180"/></td>-->
   
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

