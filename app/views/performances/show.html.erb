<body>
<div class="container">


<h1><strong>LINE UP</strong></h1><br>


<center>
<p id="notice"><%= notice %></p>

<table class="table">
    <thead>
      <tr>
        <th>작성자</th>
        <th>Date</th>
        <th>Title</th>
        <th>Poster</th>
        <th>Seat</th>
        <th>Content</th>
      

    </thead>
    
    <tbody>
      <tr>
        <td><%= @performance.user.name %></td>
        <td><%= @performance.day %></td>
        <td><%= @performance.title %></td>
        <td><%= image_tag("#{@performance.image}", style: 'height:300px;width:180px;') %></td>
        <td><%= image_tag("#{@performance.second}", style: 'height:300px;width:180px;') %></td>
        <td><%= @performance.content %></td>
      </tr>
    </tbody>
</table><br>

<%= link_to 'Edit', edit_performance_path(@performance) %> 
<%= link_to 'Back', performances_path %>
 
</center>
</div>
</body>